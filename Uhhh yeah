<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Simple Leaderboard</title>
  <style>
    body {
      background: #111;
      color: #fff;
      font-family: sans-serif;
      overflow: hidden;
    }
    #board {
      position: relative;
      width: 100%;
      height: 100vh;
      border: 2px solid #444;
    }
    .entry {
      position: absolute;
      padding: 8px 12px;
      background: #222;
      border: 1px solid #555;
      border-radius: 4px;
      transition: all 0.3s ease;
    }
  </style>
</head>
<body>
  <div id="board"></div>

  <script>
    // Add a new text entry and move it to a specific position
    function addEntry(text, x, y) {
      const entry = document.createElement('div');
      entry.className = 'entry';
      entry.textContent = text;
      entry.style.left = `${x}px`;
      entry.style.top = `${y}px`;
      document.getElementById('board').appendChild(entry);
    }

    // Example usage
    addEntry("Player 1 - 1200 pts", 100, 50);
    addEntry("Player 2 - 950 pts", 100, 120);
    addEntry("Player 3 - 800 pts", 100, 190);
  </script>
</body>
</html>

